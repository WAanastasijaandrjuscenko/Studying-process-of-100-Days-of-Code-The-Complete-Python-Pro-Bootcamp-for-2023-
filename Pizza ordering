# Asking for the information of the order.

print("Welcome to Python Pizza Deliveries!")
size = input("What size pizza do you want? S, M, or L ")
add_pepperoni = input("Do you want pepperoni? Y or N ")
extra_cheese = input("Do you want extra cheese? Y or N ")

# Summation of the finall bill.
bill = 0 
if size == "S":
    bill += 15
    if add_pepperoni == "Y":
        bill +=2
    elif extra_cheese == "Y":
        bill +=1
elif size == "M":
    bill += 20
    if add_pepperoni == "Y":
        bill +=3
    elif extra_cheese == "Y":
        bill +=1
elif size == "L":
    bill +=25
    if add_pepperoni == "Y":
        bill +=3
    elif extra_cheese == "Y":
        bill +=1
print(f"Your final bill is: ${bill}.")
